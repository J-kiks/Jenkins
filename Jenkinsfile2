#!/user/bin/env groovy
@Library('Jenkins-Shared-Library')
def gv

pipeline {
    agent any
    tools {
        maven 'maven-3.9'
    }
    stages {
        stage("init") {
            steps {
                script {
                    script {
                        gv = load "script.groovy"
                    }
                }
            }
            stage("build jar") {
                steps {
                    script {
                        buildJar()
                    }
                }
            }
            stage("build image") {
                steps {
                    script {
                        buildImage()
                    }
                }
            }
            stage("deploy") {
                steps {
                    script {
                        gv.deployApp()
                    }
                }
            }
        }
    }
}