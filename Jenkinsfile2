#!/user/bin/env groovy

library identifier: 'JSL@master', retriever: modernSCM(
        [$class: 'GitSCMSource',
        remote: 'https://github.com/J-kiks/JSL.git',
        credentialsId: 'github-cred'])
def gv

pipeline {
    agent any
    tools {
        maven 'maven'
    }
    stages {
        stage("init") {
            steps {
                script {
                    gv = load "script.groovy"
                }
            }
        }
        stage("build jar") {
            steps {
                script {
                    buildJar()
                }
            }
        }
        stage("build and push image") {
            steps {
                script {
                    buildImage 'jkiks/demo-app:jma-3.0'
                    dockerLogin()
                    dockerPush 'jkiks/demo-app:jma-3.0'
                }
            }
        }
        stage("deploy") {
            steps {
                script {
                    gv.deployApp()
                }
            }
        }
    }
} 
